<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/postListFragment">

    <fragment
        android:id="@+id/postListFragment"
        android:name="dev.gtcl.reddit.ui.posts.PostListFragment"
        android:label="fragment_post_list"
        tools:layout="@layout/fragment_post_list">
        <action
            android:id="@+id/action_postListFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_postListFragment_to_subredditSelectorFragment"
            app:destination="@id/subredditSelectorFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="dev.gtcl.reddit.ui.post_details.PostDetailsFragment"
        android:label="fragment_post_details"
        tools:layout="@layout/fragment_post_details" >
        <argument
            android:name="post"
            app:argType="dev.gtcl.reddit.posts.RedditPost"
            />
        <action
            android:id="@+id/action_postDetailsFragment_self"
            app:destination="@id/postDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/subredditSelectorFragment"
        android:name="dev.gtcl.reddit.ui.subreddits.SubredditSelectorFragment"
        android:label="SubredditSelectorFragment"
        tools:layout="@layout/fragment_subreddits"/>
</navigation>