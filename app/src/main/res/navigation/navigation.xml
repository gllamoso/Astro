<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="dev.gtcl.reddit.ui.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_commentsFragment"
            app:destination="@id/commentsFragment" >
        </action>
    </fragment>
    <fragment
        android:id="@+id/commentsFragment"
        android:name="dev.gtcl.reddit.ui.fragments.comments.CommentsFragment"
        android:label="CommentsFragment" >
        <argument
            android:name="commentUrl"
            app:argType="dev.gtcl.reddit.comments.CommentUrl"/>
    </fragment>
</navigation>