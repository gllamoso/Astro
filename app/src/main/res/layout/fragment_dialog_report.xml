<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="dev.gtcl.reddit.ui.fragments.report.ReportVM" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:title="@string/report_dialog_title"
                android:background="?android:attr/colorBackgroundFloating"/>

        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:visibility="@{!model.loading ? View.VISIBLE : View.GONE}"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/other_rule_layout"
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_height="wrap_content"
                    android:visibility="@{model.otherSelected ? View.VISIBLE : View.GONE}"
                    android:layout_marginHorizontal="16dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:hint="@string/other_rule_broken_description">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/other_rule_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{model.loading ? View.VISIBLE : View.GONE}"
                    android:layout_gravity="center"
                    android:paddingVertical="16dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>