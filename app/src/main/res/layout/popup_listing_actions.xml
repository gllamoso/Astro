<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorBackgroundFloating"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/popupListingActions_createPost"
                layout="@layout/item_selectable"
                app:iconDrawable="@{@drawable/ic_pencil_24}"
                app:text="@{@string/create_post}"/>

            <include
                android:id="@+id/popupListingActions_search"
                layout="@layout/item_selectable"
                app:iconDrawable="@{@drawable/ic_search_24}"
                app:text="@{@string/search_tab_label}"/>

            <include
                android:id="@+id/popupListingActions_myAccount"
                layout="@layout/item_selectable"
                app:iconDrawable="@{@drawable/ic_profile_24}"
                app:text="@{@string/my_account}" />

            <include
                android:id="@+id/popupListingActions_inbox"
                layout="@layout/item_selectable"
                app:iconDrawable="@{@drawable/ic_inbox_24}"
                app:text="@{@string/inbox}" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</layout>