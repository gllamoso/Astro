<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="post"
            type="dev.gtcl.reddit.models.reddit.listing.Post" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_bookmark_24dp"
                    android:visibility="@{post.saved == true ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/upvote_indicator"
                    android:layout_width="8dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:likes="@{post.likes}"
                    tools:background="@android:color/holo_orange_dark" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@{post.title}"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toTopOf="parent"
                    app:read="@{post.isRead}"
                    tools:text="Title"
                    tools:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/subreddit_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@{String.format(&quot;%s • %s • %s&quot;, post.subreddit, post.author, post.domain)}"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    tools:text="r/funny • John Doe • v.redd.it" />

                <TextView
                    android:id="@+id/score_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@{String.format(&quot;%s • %s&quot;, String.format(@string/num_points, post.score), String.format(@string/num_comments, post.numComments))}"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/subreddit_info"
                    tools:text="99999 score • 99999 comments" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/score_info"
                    app:timestamp="@{post.created}"
                    tools:text="3 hours ago" />

                <FrameLayout
                    android:id="@+id/frame_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/more_options"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="?android:attr/selectableItemBackground"
                        app:imageUrlAndHideIfNull="@{post.thumbnail}"
                        app:srcCompat="@android:drawable/ic_menu_gallery" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/more_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more_vert_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>