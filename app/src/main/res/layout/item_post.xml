<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="dev.gtcl.reddit.models.reddit.listing.Post" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="4dp"
            app:cardBackgroundColor="@color/background"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rootLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/tags_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="8dp">

                    <include
                        layout="@layout/nsfw_icon"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:visibility="@{post.nsfw == true ? View.VISIBLE : View.GONE}"/>

                    <include
                        layout="@layout/spoiler_icon"
                        android:visibility="@{post.spoiler == true ? View.VISIBLE : View.GONE}"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp"/>

                    <include
                        android:id="@+id/flair_layout"
                        layout="@layout/flair_icon"
                        android:visibility="@{post.flairText != null ? View.VISIBLE : View.GONE}"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_bookmark_24"
                    android:tint="@android:color/holo_orange_light"
                    android:visibility="@{post.saved == true ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/upvote_indicator"
                    android:layout_width="8dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:likes="@{post.likes}"
                    tools:background="@android:color/holo_orange_dark" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/tags_group"
                    app:read="@{post.isRead}"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/subreddit_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="@{String.format(&quot;%s • %s • %s&quot;, post.subredditPrefixed, post.author, post.domain)}"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:singleLine="true"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/title"
                    tools:text="r/funny • John Doe • v.redd.it" />

                <TextView
                    android:id="@+id/score_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:textColor="@android:color/darker_gray"
                    android:text="@{String.format(&quot;%s • %s&quot;, String.format(@string/num_points, post.score), String.format(@string/num_comments, post.numComments))}"
                    android:textSize="12sp"
                    android:singleLine="true"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/subreddit_info"
                    tools:text="99999 score • 99999 comments" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/frame_layout"
                    app:layout_constraintStart_toEndOf="@id/upvote_indicator"
                    app:layout_constraintTop_toBottomOf="@id/score_info"
                    app:timestamp="@{post.created}"
                    tools:text="3 hours ago" />

                <FrameLayout
                    android:id="@+id/frame_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginVertical="8dp"
                    android:background="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/more_options"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="?android:attr/selectableItemBackground"
                        app:loadImageAndHideIfNull="@{post.thumbnail}"
                        app:srcCompat="@android:drawable/ic_menu_gallery" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/more_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more_vert_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>