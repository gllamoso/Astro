<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="subreddit"
            type="dev.gtcl.astro.models.reddit.listing.Subreddit" />
        <variable
            name="titleText"
            type="String" />
        <import type="android.view.View"/>
        <import type="android.R"/>
    </data>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layoutTopAppBarListing_appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:stateListAnimator="@drawable/selector_appbar_always_elevated"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layoutTopAppBarListing_collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:expandedTitleGravity="center|bottom"
            app:contentScrim="?android:attr/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax"
                android:visibility="@{subreddit == null ? View.GONE : View.VISIBLE}">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/layoutTopAppBarListing_profileBanner"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    app:loadImageAndHideIfNull="@{subreddit.banner}"/>

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/layoutTopAppBarListing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:navigationIcon="@drawable/ic_menu_24"
                app:layout_collapseMode="pin"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/layoutTopAppBarListing_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:layout_marginEnd="8dp"
                        android:text="@{titleText}"
                        tools:text="Subreddit dsafdsafdsafadsf fasdfasdfadsf"
                        tools:textColor="@android:color/black"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/layoutTopAppBarListing_sideBarButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_reddit_circle_24"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="@{subreddit == null ? View.GONE : View.VISIBLE}"
                        app:subredditIcon="@{subreddit.icon}"/>

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

</layout>