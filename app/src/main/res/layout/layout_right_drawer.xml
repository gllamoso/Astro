<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sub"
            type="dev.gtcl.reddit.models.reddit.listing.Subreddit" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sub_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="16dp"
                android:src="@drawable/ic_reddit_circle_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subredditIcon="@{sub.icon}" />

            <include
                android:id="@+id/subscribe_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/icon_subscribe"
                android:layout_marginTop="8dp"
                app:isSubscribed="@{sub.userSubscribed}"
                app:layout_constraintTop_toBottomOf="@id/sub_icon"
                app:layout_constraintStart_toStartOf="@id/sub_icon" />

            <TextView
                android:id="@+id/sub_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@{sub.displayName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@id/sub_icon"
                app:layout_constraintTop_toTopOf="@id/sub_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/sub_icon"
                tools:text="Subreddit Name" />

            <TextView
                android:id="@+id/public_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/subscribe_toggle"
                android:padding="16dp"
                tools:text="This is a long piece of text. Abcdefghijklmnopqrstuvwxyz. How are you today?"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>