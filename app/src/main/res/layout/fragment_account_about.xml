<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="dev.gtcl.reddit.ui.fragments.account.pages.about.UserAboutVM" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/karma_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/karma"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@id/center_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/total_karma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/karma_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/center_line"
                android:text="@{String.format(&quot;%,d&quot;, model.account.commentKarma + model.account.linkKarma)}"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0"
                tools:text="9,999"/>

            <LinearLayout
                android:id="@+id/score_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/total_karma"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/center_line"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:tint="@android:color/darker_gray"
                    android:src="@drawable/ic_link_24"/>

                <TextView
                    android:id="@+id/link_karma_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    tools:text="9,999"
                    android:text="@{String.format(&quot;%,d&quot;, model.account.linkKarma)}"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="4dp"
                    android:tint="@android:color/darker_gray"
                    android:src="@drawable/ic_comments_24"/>

                <TextView
                    android:id="@+id/commentKarmaCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    tools:text="9,999"
                    android:text="@{String.format(&quot;%,d&quot;, model.account.commentKarma)}"/>

            </LinearLayout>

            <View
                android:id="@+id/center_line"
                android:layout_width="0.01dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/age_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reddit_age"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/center_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/age_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/age_label"
                app:layout_constraintStart_toEndOf="@id/center_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:timestamp="@{model.account.created}"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:singleLine="true"
                app:layout_constraintHorizontal_bias="0"
                tools:text="12 year 6 days"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@id/center_line"
                app:layout_constraintTop_toBottomOf="@id/age_text"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:tint="@android:color/darker_gray"
                    android:src="@drawable/ic_cake_24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:secondsToDate="@{model.account.created}"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    tools:text="Jan 31, 2001"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/awards_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_award"
                app:layout_constraintTop_toBottomOf="@id/score_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/public_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{model.account.subreddit.publicDescription}"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/awards_list"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Public description. This is to test what it would look like if there is a paragraph in the public description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>